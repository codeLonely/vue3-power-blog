{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "Src/*": [
        "./src/*"
      ],
      "Server/*": [
        "./src/server/*"
      ],
      "Plugin/*": [
        "./src/plugin/*"
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}